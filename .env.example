# Discord Bot Token
# Get this from https://discord.com/developers/applications
DISCORD_TOKEN=your_discord_bot_token_here

# Discord Guild ID (Server ID)
# Enable Developer Mode in Discord, right-click your server, and copy ID
GUILD_ID=your_guild_id_here

# Database Path
DATABASE_PATH=database/raid_roster.db

# Authorized Roles (comma-separated role names that can manage rosters)
# Example: Officer,Raid Leader,Admin
AUTHORIZED_ROLES=Officer,Raid Leader

# Default Timezone (used when creating raids without specifying timezone)
DEFAULT_TIMEZONE=Server Time

# Logging Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Swap System Configuration
# Channel ID where swap notifications will be sent (0 to disable)
SWAP_CHANNEL_ID=0

# Auto-approve swaps without officer review (true/false)
AUTO_APPROVE_SWAPS=false

# Hours before swap requests expire (default: 48)
SWAP_REQUEST_EXPIRY_HOURS=48
